{
  "info": {
    "name": "Register New User (Generate Test Data)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register New User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"{{dynamic_email}}\",\n    \"password\": \"{{test_password}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:4000/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "auth",
            "register"
          ]
        },
        "description": "Registers a new user with dynamic email and a fixed password, capturing the user ID and token for subsequent tests."
      },
      "response": [],
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Generate a unique email for each request",
              "const timestamp = Date.now();",
              "const randomNum = Math.floor(Math.random() * 10000);",
              "const dynamicEmail = `testuser_${timestamp}_${randomNum}@example.com`;",
              "const testPassword = \"StrongP@ssw0rd123\"; // You can change this",
              "",
              "// Set environment variables so they can be used in the request body",
              "pm.environment.set(\"dynamic_email\", dynamicEmail);",
              "pm.environment.set(\"test_password\", testPassword);",
              "",
              "console.log(`Generated Email: ${dynamicEmail}`);",
              "console.log(`Password: ${testPassword}`);"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 201 Created\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response contains user ID and token\", function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson).to.have.property('user');",
              "    pm.expect(responseJson.user).to.have.property('id');",
              "    pm.expect(responseJson).to.have.property('token');",
              "",
              "    // Store the generated user ID and token as environment variables",
              "    // This allows you to use them in other requests (e.g., for /profile or /api/checkin)",
              "    pm.environment.set(\"registered_userId\", responseJson.user.id);",
              "    pm.environment.set(\"registered_userToken\", responseJson.token);",
              "",
              "    console.log(`Registered User ID: ${responseJson.user.id}`);",
              "    console.log(`Registered User Token: ${responseJson.token}`);",
              "});",
              "",
              "pm.test(\"User email matches sent email\", function () {",
              "    const responseJson = pm.response.json();",
              "    const sentEmail = pm.environment.get(\"dynamic_email\");",
              "    pm.expect(responseJson.user.email).to.eql(sentEmail);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}